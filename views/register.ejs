<%- include('partials/header') %>
<div class="form">
    <p>Registrate</p>
    <br>

    <% if(locals.error) { %>
        <div class="alert alert-danger"><%= error %></div>
    <% } %>

    <form method="post">
            <div class="input">
                <label for="firstName">Nombre</label>
                <input type="text" name="firstName" id="firstName" class="form-control" value="<%= locals.firstName || '' %>" required />
            </div>
            
            <div class="input">
                <label for="lastName">Apellidos</label>
                <input type="text" name="lastName" id="lastName" class="form-control" value="<%= locals.lastName || '' %>" required />
            </div>
            
            <div class="input">
                <label for="email">Correo</label>
                <input type="text" name="email" id="email" class="form-control" value="<%= locals.email || '' %>" required />
            </div>
            
            <div class="input">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" class="form-control" required />
            </div>
            <br>
            <div class="button">
                    <button type="submit" class="btn btn-primary">Sign Up</button>
            <br>    <a href="/login" class="message">Cancelar</a>
            </div>
    </form>
</div>
<%- include('partials/footer') %>
